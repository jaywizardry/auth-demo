extends layout

block content
    h2.page-header Edit
    if errors
      each error, i in errors
        div.alert.alert-danger #{error.msg}
    form(method='post', action='/users/edit/'+form.id)
        .form-group
          label Name
          input.form-control(name='name',type='text',placeholder='Enter your name',id='name',value=form.name)
        .form-group
          label Contact-Number
          input.form-control(name='contact',type='number',placeholder='Enter your contact number',maxlength='10',id='contact',value=form.contact)
        .form-group
          label Email
          input.form-control(name='email',type='email',placeholder='Enter your email',id='email',value=form.email)
        .form-group
          label Username
          input.form-control(name='username',type='text',placeholder='Enter your username',id='username',value=form.uname)
        .form-group
          label Password
          input.form-control(name='password',type='password',placeholder='Enter your password',id='password',value=form.pass)
        .form-group
          label Confirm Password
          input.form-control(name='cpassword',type='password',placeholder='Confirm password',id='cpassword')
        input.btn.btn-primary(type='submit',value='Submit Edit')